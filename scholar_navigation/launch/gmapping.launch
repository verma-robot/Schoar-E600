<launch>
    <arg name="scan_topic" default="scan" />

    <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen" clear_params="true">
       <rosparam>
          odom_frame: odom
          base_frame: base_link
          map_frame: map

          map_update_interval: 5.0 # publisher map,Hz

          maxUrange: 15.0 # Should be just less than sensor range
          maxRange: 12.0 # Should be just greater than sensor range
          particles: 80 # Increased from 80

          # Update frequencies
          linearUpdate: 0.2 #deal laserscan once when robot move this distance
          angularUpdate: 0.5 #deal laserscan once when robot roate this angular
          temporalUpdate: -1.0
          resampleThreshold: 0.5

          # Initial Map Size
          xmin: -100.0
          ymin: -100.0
          xmax: 100.0
          ymax: 100.0
          delta: 0.05

          # All default
          sigma: 0.05
          kernelSize: 1
          lstep: 0.05
          astep: 0.05
          iterations: 5
          lsigma: 0.075
          ogain: 3.0
          lskip: 0
          minimumScore: 0.0
          srr: 0.01
          srt: 0.02
          str: 0.01
          stt: 0.02


          llsamplerange: 0.01
          llsamplestep: 0.01
          lasamplerange: 0.005
          lasamplestep: 0.005
          transform_publish_period: 0.05
          occ_thresh: 0.25

      </rosparam>    
    <remap from="scan" to="$(arg scan_topic)"/> 
    </node>

</launch>
