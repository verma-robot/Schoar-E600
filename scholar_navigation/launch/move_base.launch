<launch>


  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen" clear_params="true">

    <rosparam file="$(find scholar_navigation)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find scholar_navigation)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />

    <rosparam file="$(find scholar_navigation)/config/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find scholar_navigation)/config/global_costmap_params_map.yaml" command="load" />

    <rosparam file="$(find scholar_navigation)/config/base_local_planner_params.yaml" command="load" />

    <rosparam file="$(find scholar_navigation)/config/global_planner_params.yaml" command="load" />

    <rosparam file="$(find scholar_navigation)/config/planner.yaml" command="load" />
    <remap from="odom" to="/odometry/filtered"/>
    
  </node>
  
</launch>
